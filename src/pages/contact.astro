---

import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- Widget HeroText ******************* -->

  <HeroText tagline="Contact" title="Connectons-nous!" />

  <ContactUs
    id="form"
    title="Envoyez-nous un message dès aujourd'hui!"
    subtitle="Pour des réponses plus rapides, explorez notre section FAQ. Vous y trouverez peut-être la solution que vous cherchez! Sinon, notre équipe de support se fera un plaisir de vous aider."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-mail',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'En soumettant ce formulaire de contact, vous reconnaissez et acceptez la collecte de vos informations personnelles.',
    }}
    description="Notre équipe de support répond généralement dans les 24 heures ouvrables."
  />

  <!-- Widget Features2 ************** -->

  <Features2
    title="Nous sommes là pour vous aider!"
    items={[
      {
        title: 'Support général',
        description: `Discutez avec nous pour des questions relatives à la gestion de compte, à la navigation sur le site, aux problèmes de paiement, à l'accès aux modèles achetés ou aux questions générales sur le fonctionnement du site.`,
      },
      {
        title: 'Contactez les ventes',
        description:
          'Discutez avec nous pour des questions sur les achats, les options de personnalisation, les licences pour une utilisation commerciale, les questions sur des modèles spécifiques, etc.',
      },
      {
        title: 'Support technique',
        description:
          "Discutez avec nous en cas de problèmes comme l'installation de modèles, des difficultés d'édition, des problèmes de compatibilité avec des logiciels ou des erreurs de téléchargement, ou d’autres défis techniques liés à l'utilisation des modèles.",
      },
      {
        title: 'Téléphone',
        description: '(514) 718-8772',
        icon: 'tabler:headset',
      },
      {
        title: 'E-mail',
        description: 'info@serviceelitejc.ca',
        icon: 'tabler:mail',
      },
      {
        title: 'Emplacement',
        description: 'bientôt disponible',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
